@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model urunsatis.Models.Category

<form method="post" asp-action="Add">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Yeni Kategori Ekle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Ekle</button>
        <a asp-controller="Kategori" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Listeye Geri Dön
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

