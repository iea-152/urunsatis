@model List<urunsatis.Models.User>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Kayıtlı Üyeler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Panel</a></li>
                    <li class="breadcrumb-item active">Üye Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-warning card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users mr-1"></i> Tüm Kullanıcılar
                </h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Ara...">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı</th>
                            <th>Email Adresi</th>
                            <th>Rol</th>
                            <th>Kayıt Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Henüz kayıtlı üye yok.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <div class="user-block">
                                            <span class="username">
                                                <a href="#">@user.FullName</a>
                                            </span>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">Yönetici</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Standart Üye</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted"><i class="far fa-clock mr-1"></i> Bugün</span>
                                    </td>
                                    <td>
                                        <a href="#" class="text-muted" title="Düzenle">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a href="#" class="text-danger ml-2" title="Engelle">
                                            <i class="bi bi-person-slash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer clearfix">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Panele Dön
                </a>
            </div>
        </div>
    </div>
</section>