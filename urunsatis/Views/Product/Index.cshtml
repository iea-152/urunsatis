@model List<urunsatis.Models.Product>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">Ürünler</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Yeni Ürün Ekle
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover m-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Resim</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(urun.ImageUrl))
                                {
                                    <img src="@urun.ImageUrl" width="50" height="50" style="object-fit:cover; border-radius:5px;" />
                                }
                                else
                                {
                                    <span class="text-muted small">Resim Yok</span>
                                }
                            </td>
                            <td class="fw-bold">@urun.Name</td>
                            <td>
                                <span class="badge bg-secondary">@urun.Category?.Name</span>
                            </td>
                            <td>@urun.Price.ToString("c")</td>

                            <td>
                                @if (urun.Stock < 5)
                                {
                                    <span class="badge bg-danger">Kritik: @urun.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@urun.Stock Adet</span>
                                }
                            </td>

                            <td>
                                <div class="d-flex">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@urun.Id" class="btn btn-warning btn-sm me-2" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="javascript:void(0);" onclick="urunSil(@urun.Id, this)" class="btn btn-danger btn-sm" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function urunSil(id, button) {
        // 1. Emin misin diye sor (SweetAlert)
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu ürünü silmek istediğinize emin misiniz? Geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // 2. Evet derse AJAX isteği at
                $.ajax({
                    type: "POST",
                    url: "/Product/DeleteAjax/" + id,
                    success: function (data) {
                        if (data.success) {
                            // 3. Başarılıysa satırı tablodan sil (Animasyonlu)
                            var satir = $(button).closest("tr");
                            satir.fadeOut(500, function () {
                                satir.remove();
                            });

                            // Başarı mesajı göster
                            Swal.fire(
                                'Silindi!',
                                'Ürün başarıyla silindi.',
                                'success'
                            )
                        } else {
                            Swal.fire('Hata!', 'Silme işlemi başarısız oldu.', 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Hata!', 'Sunucu ile iletişim kurulamadı.', 'error');
                    }
                });
            }
        })
    }
</script>