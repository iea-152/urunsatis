@model urunsatis.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ürün Ekleme</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Ürün Bilgileri</h3>
                    </div>

                    <form method="post" asp-action="Add" enctype="multipart/form-data">

                        <div class="card-body">

                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input asp-for="Name" class="form-control" placeholder="Örn: Çikolatalı Dondurma">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Kategori</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                                    <option value="">-- Lütfen Kategori Seçin --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Fiyat (₺)</label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <div class="input-group-append">
                                        <span class="input-group-text">₺</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Stok Adedi</label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="Örn: 100" required>
                            </div>

                            <div class="form-group">
                                <label>Ürün Resmi</label>
                                <input asp-for="ImageUpload" type="file" class="form-control-file">
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Bilgi</h3>
                    </div>
                    <div class="card-body">
                        <p>Lütfen ürün bilgilerini eksiksiz giriniz. Kategori seçimi zorunludur. Resim alanı boş bırakılırsa varsayılan resim gösterilecektir.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>