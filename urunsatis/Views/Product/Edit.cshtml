@model urunsatis.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ürün Düzenle</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Ürün Bilgileri</h3>
                    </div>

                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="card-body">

                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input asp-for="Name" class="form-control" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Kategori</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Fiyat (₺)</label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control">
                                    <div class="input-group-append">
                                        <span class="input-group-text">₺</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Stok Adedi</label>
                                <input asp-for="Stock" type="number" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>

                            <hr>

                            <div class="form-group">
                                <label>Ürün Resmi</label>
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <div class="border p-1 rounded bg-light text-center" style="width: 120px;">
                                            <span class="d-block text-muted small mb-1">Mevcut</span>
                                            <img src="@Model.ImageUrl" class="img-fluid" style="max-height: 80px;" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <label class="small text-muted mb-1">Değiştirmek için yeni dosya seçin:</label>
                                        <input asp-for="ImageUpload" type="file" class="form-control-file">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Vazgeç
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Dikkat</h3>
                    </div>
                    <div class="card-body">
                        <p>Ürün bilgilerini güncellerken dikkatli olun. Eğer yeni bir resim seçmezseniz, ürünün mevcut resmi korunacaktır.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>