@model List<urunsatis.Models.Product>

<div class="d-flex justify-content-between align-items-center mb-4 px-2">
    <h5 class="text-dark font-weight-bold m-0">Ürün Vitrini</h5>
    <span class="badge badge-light p-2 border">Toplam @Model.Count ürün</span>
</div>

@if (Model.Count == 0)
{
    }
else
{
    <div class="row">
        @foreach (var urun in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="card product-card h-100">
                    
                    <div class="card-img-wrapper position-relative">
                        @if (urun.Stock < 1)
                        {
                             <span class="badge badge-dark position-absolute" style="top:10px; right:10px;">Tükendi</span>
                        }
                        else if (urun.Stock < 5)
                        {
                             <span class="badge badge-danger position-absolute" style="top:10px; right:10px;">Son @urun.Stock Ürün</span>
                        }

                        <img src="@(string.IsNullOrEmpty(urun.ImageUrl) ? "https://via.placeholder.com/300" : urun.ImageUrl)" 
                             class="card-img-top" alt="@urun.Name">
                    </div>

                    <div class="card-body p-3 d-flex flex-column">
                        <small class="text-muted text-uppercase mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">
                            @(urun.Category?.Name ?? "Genel")
                        </small>
                        
                        <h6 class="font-weight-bold text-dark text-truncate" title="@urun.Name">
                            @urun.Name
                        </h6>

                        <div class="mt-auto pt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-primary font-weight-bold" style="font-size: 1.1rem;">
                                    @urun.Price.ToString("N0") ₺
                                </span>
                            </div>

                            @if (urun.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="id" value="@urun.Id" />
                                    
                                    <div class="input-group input-group-sm">
                                        <input type="number" name="quantity" value="1" min="1" max="@urun.Stock" 
                                               class="form-control text-center font-weight-bold" 
                                               style="max-width: 60px;">
                                        
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-primary">
                                                Sepete Ekle <i class="bi bi-cart-plus ml-1"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm btn-block" disabled>Stok Yok</button>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}